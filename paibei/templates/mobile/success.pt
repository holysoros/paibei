<html xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  metal:use-macro="load: mobile_base.pt">

  <tal:block metal:fill-slot="content">
    <div data-role="page" id="page-success">
        <div id="fea" class="features">
            <div class="head text-center" style="color:#11a109; font-size:30px;">
                <br/>
                <img src="${request.static_url('paibei:static/mobile/images/success.png')}"  style="vertical-align:middle;padding-right:10px;" width="58px" height="58px">  防伪验证通过
            </div>
            <br/>
            <div class="head text-center">
                <img align="absmiddle" src="${product_image_url}" width="288px" height="219px">
            </div>
            <br/>
            <div class="ui-grid-a">
                <div class="ui-block-a">
                    <div class="ui-bar ui-bar-c" style="text-align:right;"><img src="${request.static_url('paibei:static/mobile/images/logo.png')}" width="126px" height="126px" ></div>
                </div>
                <div class="ui-block-b">
                    <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:15px;">名称：${product_name}</div>
                    <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:15px;">产地：${product_place}</div>
                    <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:15px;">售价：580元</div>
                    <div class="ui-bar ui-bar-c" style="color:#ffffff; text-align:left; font-size:15px;">批次号：${batch_id}</div>
                </div>
            </div>
            <br/>
        </div>
        <div Style="padding:10px 20px 10px; text-align:center; background:#444447; color:#ffffff;">
            <p id="contact"><img align="absmiddle" src="${request.static_url('paibei:static/mobile/images/phone-1.png')}" style="vertical-align:middle;padding-right:10px;" width="19px" height="19px" >  联系我们</p>
        </div>
    </div>

    <script>
        $(document).on("pageinit","#page-success",function(){
        $("p").on("tap",function(){
            if($(this).attr('id') == "contact") {
            window.location.href = "contactus.html";
            }
        });              
        });
    </script>
  </tal:block>

</html>
