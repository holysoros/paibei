<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="base">

<tal:block metal:fill-slot="content">
    <form accept-charset="UTF-8" id="news_form" action="${request.route_url('add_product')}" method="post" enctype="multipart/form-data">
        <fieldset>
            商品名称
            <input type="text" name="name">
            <br />

            产地
            <select name="place">
                <div tal:repeat="place places" tal:omit-tag=''>
                    <option value="${place[0]}">${place[1]}</option>
                </div>
            </select>
            <br />

            成分
            <textarea id="elements" name="elements" rows="10" cols="30">
            </textarea>
            <br />

            <label for="image">产品图片:</label>
            <input type="file" name="image" id="image"><br>

            <div class="form-actions">
                <button type="submit">保存</button>
                <button type="button">取消</button>
            </div>
        </fieldset>
    </form>
</tal:block>

</html>
